# DealCycle CRM Development Environment Configuration
# Copy this file to .env.development and fill in your values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
API_PREFIX=/api
CORS_ORIGIN=http://localhost:3001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/dealcycle_crm_dev
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000

# =============================================================================
# JWT & SESSION CONFIGURATION
# =============================================================================
# ⚠️  Development-only secrets - DO NOT use in production
JWT_SECRET=dev-jwt-secret-key-change-in-production-minimum-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

SESSION_SECRET=dev-session-secret-change-in-production-minimum-32-chars
SESSION_MAX_AGE=86400000

# =============================================================================
# SECURITY CONFIGURATION (Relaxed for development)
# =============================================================================
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=10
LOCKOUT_DURATION=300000

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================
# Optional for development - can be mocked
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# =============================================================================
# TWILIO CONFIGURATION (SMS Communications)
# =============================================================================
# Optional for development - can be mocked
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Optional for development - can use mailhog or similar
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=DealCycle CRM (Dev)

# =============================================================================
# SEARCH CONFIGURATION
# =============================================================================
MEILISEARCH_MASTER_KEY=dev-master-key-change-in-production

# =============================================================================
# FEATURE FLAGS (Enabled for development)
# =============================================================================
ENABLE_GOOGLE_OAUTH=false
ENABLE_EMAIL_VERIFICATION=false
ENABLE_SMS_VERIFICATION=false
ENABLE_TEST_MODE=true
ENABLE_DEBUG_MODE=true

# =============================================================================
# TEST MODE CONFIGURATION
# =============================================================================
TEST_MODE=true
TEST_DEFAULT_ROLE=admin

# =============================================================================
# MONITORING & LOGGING (Verbose for development)
# =============================================================================
LOG_LEVEL=debug
SENTRY_DSN=
ENABLE_REQUEST_LOGGING=true
ENABLE_SQL_LOGGING=true

# =============================================================================
# DEVELOPMENT-SPECIFIC SETTINGS (All enabled)
# =============================================================================
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true
ENABLE_DEBUGGER=true
SKIP_AUTH_CHECK=false
ENABLE_MOCK_DATA=true

# =============================================================================
# PERFORMANCE SETTINGS (Optimized for development)
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
CACHE_TTL=300

# =============================================================================
# API RATE LIMITING (Relaxed for development)
# =============================================================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# =============================================================================
# DATABASE CONNECTION SETTINGS
# =============================================================================
DB_CONNECTION_TIMEOUT=30000
DB_SOCKET_TIMEOUT=45000
DB_POOL_SIZE=10

# =============================================================================
# DEVELOPMENT OPTIMIZATIONS
# =============================================================================
# Enable detailed logging
ENABLE_DETAILED_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# Development tools
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_API_DOCS=true

# Mock services for development
ENABLE_MOCK_EMAIL=true
ENABLE_MOCK_SMS=true
ENABLE_MOCK_PAYMENTS=true
