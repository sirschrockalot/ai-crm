  "logo": "https://via.placeholder.com/150x150/4A90E2/FFFFFF?text=DC",
  "keywords": ["crm", "real-estate", "wholesaling", "nextjs", "typescript"],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
