# DealCycle CRM Environment Configuration Template
# Copy this file to .env.{environment} and fill in your values
# Remove the .template extension and update values as needed

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
API_PREFIX=/api
CORS_ORIGIN=http://localhost:3001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Connection (Primary Database)
MONGODB_URI=mongodb://localhost:27017/dealcycle_crm
# Alternative: DATABASE_URL=mongodb://localhost:27017/dealcycle_crm

# MongoDB Authentication (if using authentication)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000

# =============================================================================
# JWT & SESSION CONFIGURATION
# =============================================================================
# ⚠️  CHANGE THESE IN PRODUCTION - Use strong, unique secrets
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

SESSION_SECRET=your-super-secret-session-key-change-in-production-minimum-32-chars
SESSION_MAX_AGE=86400000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================
# Get these from Google Cloud Console > APIs & Services > Credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# =============================================================================
# TWILIO CONFIGURATION (SMS Communications)
# =============================================================================
# Get these from Twilio Console
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=DealCycle CRM

# =============================================================================
# SEARCH CONFIGURATION
# =============================================================================
MEILISEARCH_MASTER_KEY=your-master-key-here

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_GOOGLE_OAUTH=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_SMS_VERIFICATION=false
ENABLE_TEST_MODE=false
ENABLE_DEBUG_MODE=false

# =============================================================================
# TEST MODE CONFIGURATION
# =============================================================================
# Set to true to enable test mode (bypasses authentication)
TEST_MODE=false
TEST_DEFAULT_ROLE=admin

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-url
ENABLE_REQUEST_LOGGING=false
ENABLE_SQL_LOGGING=false

# =============================================================================
# DEVELOPMENT-SPECIFIC SETTINGS
# =============================================================================
# Only enable these in development environments
ENABLE_HOT_RELOAD=false
ENABLE_SOURCE_MAPS=false
ENABLE_DEBUGGER=false
SKIP_AUTH_CHECK=false
ENABLE_MOCK_DATA=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
CACHE_TTL=300

# =============================================================================
# API RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# =============================================================================
# DATABASE CONNECTION SETTINGS
# =============================================================================
DB_CONNECTION_TIMEOUT=30000
DB_SOCKET_TIMEOUT=45000
DB_POOL_SIZE=10

