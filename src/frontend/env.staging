# Staging Environment Configuration

# Application Configuration
NEXT_PUBLIC_APP_NAME=DealCycle CRM (Staging)
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENV=staging

# Frontend API Configuration (Next.js API routes)
NEXT_PUBLIC_API_URL=https://staging.dealcycle.com/api
NEXT_PUBLIC_API_TIMEOUT=15000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3

# Microservices Configuration
# Authentication Service
NEXT_PUBLIC_AUTH_SERVICE_URL=https://auth-staging.dealcycle.com
NEXT_PUBLIC_AUTH_SERVICE_API_URL=https://auth-staging.dealcycle.com/api/auth

# Leads Service
NEXT_PUBLIC_LEADS_SERVICE_URL=https://leads-staging.dealcycle.com
NEXT_PUBLIC_LEADS_SERVICE_API_URL=https://leads-staging.dealcycle.com/api/leads

# Transactions Service
NEXT_PUBLIC_TRANSACTIONS_SERVICE_URL=https://transactions-staging.dealcycle.com
NEXT_PUBLIC_TRANSACTIONS_SERVICE_API_URL=https://transactions-staging.dealcycle.com/api/v1
NEXT_PUBLIC_TRANSACTIONS_JWT_TOKEN=staging-transactions-jwt-token

# Timesheet Service
NEXT_PUBLIC_TIMESHEET_SERVICE_URL=https://timesheet-staging.dealcycle.com
NEXT_PUBLIC_TIMESHEET_SERVICE_API_URL=https://timesheet-staging.dealcycle.com/api/timesheet

# Lead Import Service
NEXT_PUBLIC_LEAD_IMPORT_SERVICE_URL=https://import-staging.dealcycle.com
NEXT_PUBLIC_LEAD_IMPORT_SERVICE_API_URL=https://import-staging.dealcycle.com/api/import

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=wss://staging.dealcycle.com

# Authentication Configuration
NEXT_PUBLIC_AUTH_DOMAIN=staging-dealcycle.auth0.com
NEXT_PUBLIC_AUTH_CLIENT_ID=staging-client-id
NEXT_PUBLIC_AUTH_AUDIENCE=staging-api-audience
NEXT_PUBLIC_AUTH_REDIRECT_URI=https://staging.dealcycle.com/callback

# Google OAuth Configuration
NEXT_PUBLIC_GOOGLE_CLIENT_ID=staging-google-client-id
NEXT_PUBLIC_GOOGLE_CLIENT_SECRET=staging-google-client-secret

# External Services
NEXT_PUBLIC_TWILIO_ACCOUNT_SID=staging-twilio-account-sid
NEXT_PUBLIC_TWILIO_AUTH_TOKEN=staging-twilio-auth-token
NEXT_PUBLIC_TWILIO_PHONE_NUMBER=staging-twilio-phone-number

# Monitoring and Analytics
NEXT_PUBLIC_SENTRY_DSN=staging-sentry-dsn
NEXT_PUBLIC_ANALYTICS_ID=staging-analytics-id
NEXT_PUBLIC_MIXPANEL_TOKEN=staging-mixpanel-token

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_AUTOMATION=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_COMMUNICATIONS=true

# Performance Configuration
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=true
NEXT_PUBLIC_ENABLE_OFFLINE_SUPPORT=false
NEXT_PUBLIC_CACHE_DURATION=1800

# Security Configuration
NEXT_PUBLIC_ENABLE_HTTPS_ONLY=true
NEXT_PUBLIC_ENABLE_CSP=true
NEXT_PUBLIC_ENABLE_HSTS=true

# Development Configuration
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_LOGGING=true
NEXT_PUBLIC_LOG_LEVEL=info

# Build Configuration
ANALYZE=false
GENERATE_SOURCEMAP=false 