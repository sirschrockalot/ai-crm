# Production Environment Variables for Heroku
NODE_ENV=production

# Application Configuration
NEXT_PUBLIC_APP_NAME=DealCycle CRM
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENV=production

# Authentication Bypass (Production - should be false)
NEXT_PUBLIC_BYPASS_AUTH=false

# Frontend API Configuration (Next.js API routes)
NEXT_PUBLIC_API_URL=https://your-frontend-app.herokuapp.com/api
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3

# Microservices Configuration
# Authentication Service
NEXT_PUBLIC_AUTH_SERVICE_URL=https://your-auth-service.herokuapp.com
NEXT_PUBLIC_AUTH_SERVICE_API_URL=https://your-auth-service.herokuapp.com/api/auth

# Leads Service
NEXT_PUBLIC_LEADS_SERVICE_URL=https://your-leads-service.herokuapp.com
NEXT_PUBLIC_LEADS_SERVICE_API_URL=https://your-leads-service.herokuapp.com/api/leads

# Transactions Service
NEXT_PUBLIC_TRANSACTIONS_SERVICE_URL=https://your-transactions-service.herokuapp.com
NEXT_PUBLIC_TRANSACTIONS_SERVICE_API_URL=https://your-transactions-service.herokuapp.com/api/v1

# Timesheet Service
NEXT_PUBLIC_TIMESHEET_SERVICE_URL=https://your-timesheet-service.herokuapp.com
NEXT_PUBLIC_TIMESHEET_SERVICE_API_URL=https://your-timesheet-service.herokuapp.com/api/timesheet

# Lead Import Service
NEXT_PUBLIC_LEAD_IMPORT_SERVICE_URL=https://your-lead-import-service.herokuapp.com
NEXT_PUBLIC_LEAD_IMPORT_SERVICE_API_URL=https://your-lead-import-service.herokuapp.com/api/import

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=wss://your-frontend-app.herokuapp.com

# Heroku will automatically set PORT
PORT=3000