{
  "name": "dealcycle-crm",
  "version": "1.0.0",
  "description": "DealCycle CRM - Modern Real Estate Wholesaling Platform",
  "private": true,
  "workspaces": [
    "src/frontend",
    "src/shared",
    "src/auth-service"
  ],
  "scripts": {
    "dev": "npm --workspaces=false run dev:frontend",
    "dev:frontend": "cd src/frontend && npm --workspaces=false run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd src/frontend && npm run build",
    "heroku-postbuild": "npm run build:frontend",
    "test": "npm run test:frontend",
    "test:frontend": "cd src/frontend && npm run test",
    "test:e2e": "cd src/frontend && npm run test:e2e",
    "test:all": "./scripts/test-all.sh",
    "test:quick": "./scripts/quick-test.sh",
    "test:coverage": "npm run test:coverage:frontend",
    "test:coverage:frontend": "cd src/frontend && npm run test:coverage",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd src/frontend && npm run lint",
    "lint:fix": "npm run lint:fix:frontend",
    "lint:fix:frontend": "cd src/frontend && npm run lint:fix",
    "format": "prettier --write \"**/*.{js,ts,jsx,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,jsx,tsx,json,md}\"",
    "type-check": "npm run type-check:frontend",
    "type-check:frontend": "cd src/frontend && npm run type-check",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "install:all": "npm install && npm run install:frontend && npm run install:auth-service",
    "install:frontend": "cd src/frontend && npm install",
    "install:auth-service": "cd src/auth-service && npm install",
    "clean": "npm run clean:frontend && npm run clean:auth-service",
    "clean:frontend": "cd src/frontend && npm run clean",
    "clean:auth-service": "cd src/auth-service && npm run clean",
    "dev:auth": "cd src/auth-service && npm run start:dev",
    "build:auth": "cd src/auth-service && npm run build",
    "test:auth": "cd src/auth-service && npm test"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/dealcycle-crm.git"
  },
  "keywords": [
    "crm",
    "real-estate",
    "wholesaling",
    "micro-apps",
    "typescript",
    "nextjs"
  ],
  "author": "DealCycle Team",
  "license": "MIT"
} 