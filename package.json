{
  "name": "dealcycle-crm",
  "version": "1.0.0",
  "description": "DealCycle CRM - Modern Real Estate Wholesaling Platform",
  "private": true,
  "workspaces": [
    "src/backend",
    "src/frontend",
    "src/mobile",
    "src/shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd src/backend && npm run dev",
    "dev:frontend": "cd src/frontend && npm run dev",
    "dev:mobile": "cd src/mobile && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd src/backend && npm run build",
    "build:frontend": "cd src/frontend && npm run build",
    "build:mobile": "cd src/mobile && npm run build",
    "test": "npm run test:backend && npm run test:frontend && npm run test:mobile",
    "test:backend": "cd src/backend && npm run test",
    "test:frontend": "cd src/frontend && npm run test",
    "test:mobile": "cd src/mobile && npm run test",
    "test:e2e": "cd src/frontend && npm run test:e2e",
    "test:all": "./scripts/test-all.sh",
    "test:quick": "./scripts/quick-test.sh",
    "test:api": "curl -f http://localhost:3000/api/health || echo 'Backend not running'",
    "test:load": "artillery run scripts/load-test.yml",
    "test:coverage": "npm run test:coverage:backend && npm run test:coverage:frontend",
    "test:coverage:backend": "cd src/backend && npm run test:coverage",
    "test:coverage:frontend": "cd src/frontend && npm run test:coverage",
    "lint": "npm run lint:backend && npm run lint:frontend && npm run lint:mobile",
    "lint:backend": "cd src/backend && npm run lint",
    "lint:frontend": "cd src/frontend && npm run lint",
    "lint:mobile": "cd src/mobile && npm run lint",
    "lint:fix": "npm run lint:fix:backend && npm run lint:fix:frontend && npm run lint:fix:mobile",
    "lint:fix:backend": "cd src/backend && npm run lint:fix",
    "lint:fix:frontend": "cd src/frontend && npm run lint:fix",
    "lint:fix:mobile": "cd src/mobile && npm run lint:fix",
    "format": "prettier --write \"**/*.{js,ts,jsx,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,jsx,tsx,json,md}\"",
    "type-check": "npm run type-check:backend && npm run type-check:frontend",
    "type-check:backend": "cd src/backend && npm run type-check",
    "type-check:frontend": "cd src/frontend && npm run type-check",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "install:all": "npm install && npm run install:backend && npm run install:frontend && npm run install:mobile",
    "install:backend": "cd src/backend && npm install",
    "install:frontend": "cd src/frontend && npm install",
    "install:mobile": "cd src/mobile && npm install",
    "clean": "npm run clean:backend && npm run clean:frontend && npm run clean:mobile",
    "clean:backend": "cd src/backend && npm run clean",
    "clean:frontend": "cd src/frontend && npm run clean",
    "clean:mobile": "cd src/mobile && npm run clean"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/dealcycle-crm.git"
  },
  "keywords": [
    "crm",
    "real-estate",
    "wholesaling",
    "micro-apps",
    "typescript",
    "nestjs",
    "nextjs",
    "react-native"
  ],
  "author": "DealCycle Team",
  "license": "MIT"
} 